# NavTools Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Cloudflare Configuration
# =============================================================================
CLOUDFLARE_DATABASE_ID=your-database-id
CLOUDFLARE_D1_FILE=db/database.db
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ACCOUNT_ID=your-account-id

# =============================================================================
# Authentication
# =============================================================================
AUTH_USERNAME=admin
ADMIN_PASSWORD=your-password
# AUTH_PASSWORD will be auto-generated from ADMIN_PASSWORD if not set

# =============================================================================
# AI Model API Configuration
# =============================================================================
AI_BASE_URL=https://your-ai-api-url/v1
AI_API_KEY=your-api-key
DEFAULT_MODEL=your-model-name

# =============================================================================
# Database Configuration
# =============================================================================
DB_TYPE=d1
USE_REMOTE_DB=true
SQLITE_DB_PATH=/app/data/nav.db

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=production
PORT=8787

# =============================================================================
# Security (Optional - generate your own)
# =============================================================================
# JWT_SECRET=your-jwt-secret-key-here
# ENCRYPTION_KEY=your-encryption-key-here
